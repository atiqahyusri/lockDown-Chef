        <activity android:name=".RecipeIngredient"/>
        <activity android:name=".ViewListContents"/>

        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="fullSensor" /> <!-- Login Activity -->
